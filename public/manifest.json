{
  "manifest_version": 2,

  "name": "Global Object Finder",
  "description": "This extension displays the contents of dataLayer and utag global objects",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
    // {
    //   "matches": ["*://*/*"],
    //   "css": [],
    //   "js": ["content.js"]
    // }
  ],

  "permissions": [
    "tabs",
    "http://*/*", "https://*/*",
    "storage"
  ],

  "web_accessible_resources": ["globalVars.js"]

}